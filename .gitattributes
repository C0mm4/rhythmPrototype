# Auto detect text files and perform LF normalization
*.cs       text eol=lf
*.shader   text eol=lf
*.cginc    text eol=lf
*.compute  text eol=lf
*.json     text eol=lf
*.xml      text eol=lf
*.yaml     text eol=lf
*.yml      text eol=lf
*.txt      text eol=lf
*.md       text eol=lf

# Unity asset/meta files
*.meta     text eol=lf
*.unity    text eol=lf
*.prefab   text eol=lf
*.mat      text eol=lf
*.anim     text eol=lf
*.controller text eol=lf

# Prevent CRLF conversion on binary files
*.png      binary
*.jpg      binary
*.jpeg     binary
*.mp3      binary
*.ogg      binary
*.wav      binary
*.fbx      binary
*.prefab   -text
*.unity    -text

# Ignore line endings conversion for binary formats (like serialized Unity files)
*.dll      binary
*.exe      binary

# Default behavior for unspecified files
* text=auto